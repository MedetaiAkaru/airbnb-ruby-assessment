<h1>Editing Profile</h1>
<div class="row">
    <form class="col s12" method="POST" action="/users/<%= @user.id %>/edit">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_name" type="text" name="name" value="<%= @user.name %>" class="validate">
          <label for="icon_name" data-error="Please tell us your name">Name</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id="icon_email" type="text" name="email" value="<%= @user.email %>" class="validate">
          <label for="icon_email" data-error="Please enter a valid email address">Email</label>
        </div>
      </div>
      <div class="row">
      	<div class="col s12">
      		 <button class="btn waves-effect waves-light" type="submit" name="action">Save
    		<i class="material-icons right">send</i>
  			</button>
  		</div>
      </div>
    </form>
  </div>