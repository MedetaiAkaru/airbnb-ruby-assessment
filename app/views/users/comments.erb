<h3> Comments Posted by <%= @user.name %></h3>
<a href="/users/<%= @user.id %>">Back to Profile</a>
	<% @user.comments.each do |comment| %>
		<div class="card darken-1">
	    <div class="card-content">
	        <span class="card-title"><a href="/posts/<%= comment.property.id %>"><%= comment.commenttext %></a></span>
	        <p>on <%= comment.created_at %></p>
			</div>
        <div class="card-action">
          for the property: <a href="/posts/<%= comment.property.id %>"><%= comment.property.title %></a>
        </div>
		</div>
	<% end %>
