<h1>Welcome to iBed</h1>
<h3>These are beds... redefined</h2>
  <br>
  <br>
<div class="row">
    <form class="col s12"  method=post action=/users/new>
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_name" type="text" name="user[name]" class="validate">
          <label for="icon_name" data-error="Please tell us your name">Name</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id="icon_email" type="text" name="user[email]" class="validate">
          <label for="icon_email" data-error="Please enter a valid email address">Email</label>
        </div>
      </div>
      <div class="row">
      	<div class="input-field col s12">
          <i class="material-icons prefix">https</i>
          <input id="icon_password" type="password" name="user[password]" class="validate">
          <label for="icon_password">Password</label>
      	</div>
      </div>
      <div class="row">
      	<div class="col s12">
      		 <button class="btn waves-effect waves-light" type="submit" name="action">I want to be on one of those beds...
    		<i class="material-icons right">favorite</i>
  			</button>
  		</div>
      </div>
    </form>
  </div>