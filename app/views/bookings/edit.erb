<div class="row"><img src="<%= @booking.property.image %>" class="smalllisting"></div>
<p class="flow-text"><h1><%= @booking.property.title %></h1></p>
By: <a href="/users/<%= @booking.property.user.id %>">  <%= @booking.property.user.name %></a> 
<br>

<div class="row">
    <form class="col s12" action="/bookings/<%= @booking.id %>/edit" method="POST">
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">date_range</i>
        <input type="datestart" class="datepicker" name="datestart" value="<%=@booking.date_start%>">          

      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">date_range</i>
        <input type="dateend" class="datepicker" name="dateend" value="<%=@booking.date_end%>">          

      </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">comment</i>
		      <textarea id="textarea1" name="commenttext" placeholder="Comment" class="materialize-textarea"><%=@booking.extra%></textarea>
          <label for="textarea1">Do you have anything extra to mention?</label>
        </div>
      </div>
      <div class="row">
      	<div class="col s12">
      		<button class="btn waves-effect waves-light" type="submit" name="action">Edit Booking
    		  <i class="material-icons right">send</i>
  		    </button>
  		  </div>
      </div>
    </form>
  </div>
  <div class="row">
      <form action="/bookings/<%= @booking.id %>/delete" method="POST">
        <button class="waves-effect waves-light btn">Delete Booking</button>
      </form>
    </div>



<style>
IMG.smalllisting
{
max-width: 100px;
max-height: 100px;
}
</style>
<script>
  $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15 // Creates a dropdown of 15 years to control year
  });
  </script>