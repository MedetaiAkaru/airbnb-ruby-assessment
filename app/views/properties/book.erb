<% if !logged_in? %>
<h1>You're not logged in.</h1>
<% else %>

<div class="row"><img src="<%= @property.image %>" class="smalllisting"></div>
<p class="flow-text"><h1><%= @property.title %></h1></p>
By: <a href="/users/<%= @property.user.id %>">  <%= @property.user.name %></a> 
<br>

<div class="row">
    <form class="col s12" action="/properties/<%= @property.id %>/book" method="POST">
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">date_range</i>
        <input type="datestart" class="datepicker" name="datestart">    
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">date_range</i>
        <input type="dateend" class="datepicker" name="dateend">        
      </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">comment</i>
		      <textarea id="textarea1" name="extra" placeholder="Comment" class="materialize-textarea"></textarea>
          <label for="textarea1">Do you have anything extra to mention?</label>
        </div>
      </div>
      <div class="row">
      	<div class="col s12">
      		<button class="btn waves-effect waves-light" type="submit" name="action">Book!
    		  <i class="material-icons right">send</i>
  		    </button>
  		  </div>
      </div>
    </form>
  </div>
<% end %>



<style>
IMG.smalllisting
{
max-width: 100px;
max-height: 100px;
}
</style>
<script>
  $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15 // Creates a dropdown of 15 years to control year
  });
  </script>