<h1>Edit Property</h1>

  <div class="row">
  <form class="col s12" action="/properties/<%= @property.id %>/edit" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">home</i>
        <input id="icon_title" type="text" name="title" class="validate" value="<%=@property.title%>">
        <label for="icon_title" data-error="Please give a itletitle to your property">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">description</i>
        <textarea id="icon_description" name="description" placeholder="Description" class="materialize-textarea"><%=@property.description%></textarea>
        <label for="icon_description">Describe your property here</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">toll</i>
        <input id="icon_price" type="text" name="price" class="validate" value="<%=@property.price%>">
        <label for="icon_price">Price (RM)</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">photo</i>
        <input id="icon_photo" type="text" name="image" placeholder="Link to your photo (URL)" class="validate" value="<%=@property.image%>">
        <label for="icon_photo" data-error="Please include a photo link (Optional)">Photo</label>
      </div>
    </div>
    
    <div class="row">
      <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">Edit and Post Property
        <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>
</div>