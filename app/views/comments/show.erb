<p class="flow-text"><%= @comment.commenttext %></p>

<p>Comment for: <a href="/properties/<%= @comment.property.id %>">  <%= @comment.property.title %></a> </p>

<% if current_user.id == @comment.user.id %>
  <a class="waves-effect waves-light btn" href="/comment/<%= @comment.id %>/edit">Edit</a><br>
  <form action="/comments/<%= @comment.id %>/delete" method="POST">
    <button class="waves-effect waves-light btn">Delete</button>
  </form>
<% end %>