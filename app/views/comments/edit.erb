<% if !logged_in? %>
<h1>You're not logged in.</h1>
<% else %>

<p class="flow-text"><h1><%= @comment.property.title %></h1></p>
<br>
<div class="row">
Original comment:
<blockquote><%=@comment.commenttext%></blockquote>
</div>

<div class="row">
    <form class="col s12" action="/comments/<%= @comment.id %>/edit" method="POST">
    <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">comment</i>
			<textarea id="textarea1" name="commenttext" placeholder="Comment" class="materialize-textarea"><%=@comment.commenttext%></textarea>
          <label for="textarea1">Would you like to change your comment?</label>
        </div>
      </div>
      <div class="row">
      	<div class="col s12">
      		 <button class="btn waves-effect waves-light" type="submit" name="action">Edit Comment
    		<i class="material-icons right">send</i>
  			</button>
  		</div>
      </div>
    </form>
  </div>
<% end %>